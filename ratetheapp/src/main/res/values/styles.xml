<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RateTheAppText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/RateTheAppText</item>
    </style>

    <style name="RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratetheapp_stars</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:max">5</item>
        <item name="android:numStars">5</item>
        <item name="android:rating">0</item>
        <item name="android:stepSize">1</item>
    </style>
</resources>